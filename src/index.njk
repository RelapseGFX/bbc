      } else {
        for (var i = 0; i < featureBoxes.length; i++) {
          featureBoxes[i].classList.remove("w3-animate-top");
          featureBoxes[i].style.display = "block";
        }
        clearTimeout(statsBoxCarouselTimeout);
      }
    }
  
    var statsBoxIndex = 0;
    var statsBoxCarouselTimeout;
  
    function statsBoxCarousel() {
      var i;
      var x = document.getElementsByClassName("stats-box");
      for (i = 0; i < x.length; i++) {
        x[i].style.display = "none";
      }
      statsBoxIndex++;
      if (statsBoxIndex > x.length) {
        statsBoxIndex = 1;
      }
      x[statsBoxIndex - 1].style.display = "block";
      if (window.innerWidth <= 767) {
        statsBoxCarouselTimeout = setTimeout(statsBoxCarousel, 7000);
      }
    }
  
    window.onload = function() {
      applyFeatureBoxAnimation();
      applyStatsBoxAnimation();
    };
    window.onresize = function() {
      applyFeatureBoxAnimation();
      applyStatsBoxAnimation();
    };
