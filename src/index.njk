  <script>
    var featureBoxIndex = 0;
    var featureBoxCarouselTimeout;

    function applyFeatureBoxAnimation() {
        var featureBoxes = document.getElementsByClassName("feature-box");
        var isSmallScreen = window.innerWidth <= 750;

        for (var i = 0; i < featureBoxes.length; i++) {
            if (isSmallScreen) {
                featureBoxes[i].classList.add("w3-animate-right");
                featureBoxes[i].style.display = "none";
            } else {
                featureBoxes[i].classList.remove("w3-animate-right");
                featureBoxes[i].style.display = "block";
            }
        }

        if (isSmallScreen) {
            featureBoxCarousel(); // Ensure the carousel starts on load or resize
        }
    }

    function featureBoxCarousel() {
        var featureBoxes = document.getElementsByClassName("feature-box");

        for (var i = 0; i < featureBoxes.length; i++) {
            featureBoxes[i].style.display = "none";
        }

        featureBoxIndex = (featureBoxIndex + 1) % featureBoxes.length;
        featureBoxes[featureBoxIndex].style.display = "block";

        if (window.innerWidth <= 750) {
            clearTimeout(featureBoxCarouselTimeout); // Ensure previous timeout is cleared
            featureBoxCarouselTimeout = setTimeout(featureBoxCarousel, 7000); // Set new timeout
        }
    }

    var statsBoxIndex = 0;
    var statsBoxCarouselTimeout;

    function applyStatsBoxAnimation() {
        var statsBoxes = document.getElementsByClassName("stats-box");
        var isSmallScreen = window.innerWidth <= 767;

        for (var i = 0; i < statsBoxes.length; i++) {
            if (isSmallScreen) {
                statsBoxes[i].classList.add("w3-animate-top");
                statsBoxes[i].style.display = "none";
            } else {
                statsBoxes[i].classList.remove("w3-animate-top");
                statsBoxes[i].style.display = "block";
            }
        }

        if (isSmallScreen) {
            statsBoxCarousel(); // Ensure the carousel starts on load or resize
        }
    }

    function statsBoxCarousel() {
        var statsBoxes = document.getElementsByClassName("stats-box");

        for (var i = 0; i < statsBoxes.length; i++) {
            statsBoxes[i].style.display = "none";
        }

        statsBoxIndex = (statsBoxIndex + 1) % statsBoxes.length;
        statsBoxes[statsBoxIndex].style.display = "block";

        if (window.innerWidth <= 750) {
            clearTimeout(statsBoxCarouselTimeout); // Ensure previous timeout is cleared
            statsBoxCarouselTimeout = setTimeout(statsBoxCarousel, 7000); // Set new timeout
        }
    }

    window.onload = function() {
        applyFeatureBoxAnimation();
        applyStatsBoxAnimation();
    };

    window.onresize = function() {
        applyFeatureBoxAnimation();
        applyStatsBoxAnimation();
    };
  </script>

  <script>
    const tabsContainer = document.querySelector(".tabs-container");
const tabsList = tabsContainer.querySelector("ul");
const tabButtons = tabsList.querySelectorAll("a");
const tabPanels = tabsContainer.querySelectorAll(".tabs__panels > div");

tabsList.setAttribute("role", "tablist");

tabsList.querySelectorAll("li").forEach((listitem) => {
  listitem.setAttribute("role", "presentation");
});

tabButtons.forEach((tab, index) => {
  tab.setAttribute("role", "tab");
  if (index === 0) {
    tab.setAttribute("aria-selected", "true");
  } else {
    tab.setAttribute("tabindex", "-1");
    tabPanels[index].setAttribute("hidden", "");
  }
});

tabPanels.forEach((panel) => {
  panel.setAttribute("role", "tabpanel");
  panel.setAttribute("tabindex", "0");
});

tabsContainer.addEventListener("click", (e) => {
  const clickedTab = e.target.closest("a");
  if (!clickedTab) return;
  e.preventDefault();

  switchTab(clickedTab);
});

tabsContainer.addEventListener("keydown", (e) => {
  switch (e.key) {
    case "ArrowLeft":
      moveLeft();
      break;
    case "ArrowRight":
      moveRight();
      break;
    case "Home":
      e.preventDefault();
      switchTab(tabButtons[0]);
      break;
    case "End":
      e.preventDefault();
      switchTab(tabButtons[tabButtons.length - 1]);
      break;
  }
});

function moveLeft() {
  const currentTab = document.activeElement;
  if (!currentTab.parentElement.previousElementSibling) {
    switchTab(tabButtons[tabButtons.length - 1]);
  } else {
    switchTab(
      currentTab.parentElement.previousElementSibling.querySelector("a")
    );
  }
}

function moveRight() {
  const currentTab = document.activeElement;
  if (!currentTab.parentElement.nextElementSibling) {
    switchTab(tabButtons[0]);
  } else {
    switchTab(currentTab.parentElement.nextElementSibling.querySelector("a"));
  }
}

function switchTab(newTab) {
  const activePanelId = newTab.getAttribute("href");
  const activePanel = tabsContainer.querySelector(activePanelId);

  tabButtons.forEach((button) => {
    button.setAttribute("aria-selected", false);
    button.setAttribute("tabindex", "-1");
  });

  tabPanels.forEach((panel) => {
    panel.setAttribute("hidden", true);
  });

  activePanel.removeAttribute("hidden");

  newTab.setAttribute("aria-selected", true);
  newTab.setAttribute("tabindex", "0");
  newTab.focus();
}

// Add event listener to card links to stop event propagation
const cardLinks = document.querySelectorAll('.single-card a');


cardLinks.forEach(link => {
  link.addEventListener('click', (e) => {
    e.stopPropagation();
  });
});

  </script>
  <script>
    function toggle() {
        var trailer = document.querySelector(".trailer");
        var iframe = document.querySelector("#youtube-video");
        trailer.classList.toggle("active");

        if (trailer.classList.contains("active")) {
            var videoSrc = document.querySelector(".play-button").getAttribute("data-src");
            iframe.src = videoSrc; 
        } else {
            iframe.src = ""; 
        }
    }
  </script>
  

